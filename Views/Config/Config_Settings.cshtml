                                                        <div class="col-md-12 col-sm-6 col-xs-12 pl-30 pr-30">
                                                            <input class="col-md-11 config_input" name="card_percentage" value="@v.Card_Percentage" />
                                                        </div>
                                                    </div>
                                                   

                                                    <div class="clearfix"></div>
