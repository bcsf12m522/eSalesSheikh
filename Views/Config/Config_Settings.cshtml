                                                        var imgsrc = string.Format("data:image/gif;base64,{0}", base64);


                                                        <div class="fileupload fileupload-new" data-provides="fileupload" align="center">

                                                            <div class="fileupload-new thumbnail"><img id="ass" style="width:180px" src="@imgsrc" class="product-img"></div>

                                                            <div class="fileupload-preview fileupload-exists thumbnail @*product-img*@" style="width:180px"></div>

                                                            <div>

                                                                @*<a href="#" class="btn btn_view_payment_status btn-margin-product mr-5" style="box-shadow:none!important;">Remove</a>*@
