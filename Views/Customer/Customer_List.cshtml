                                        @*<th class="text-center">ID</th>*@
                                        <th class="text-center">Name</th>
                                        <th class="text-center">Company Name</th>
                                        <th class="text-center">Phone</th>
                                        <th class="text-center">Email</th>
                                        <th class="text-center">Address</th>
                                        <th class="text-center">Postcode</th>
                                        @*<th class="text-center">Status</th>*@

                                        @*<th>Pay Rate</th>
                        <th>Role</th>
                        <th>Status</th>*@

                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>

                                <tbody class="black-color bold" id="updated_customer_list"></tbody>


                            </table>
                        </div>

                        <div class="clearfix"></div>

                        <div id="customer_summary_loading_hide">

                            @{
                                Html.RenderPartial("Customer_Summary");
                            }
                        </div>


                        <div class="clearfix"></div>

                    </div>
                </div>
                @*-----------------Main Container Ends---------------*@
            </div>


            <div id="sticky-footer-push"></div>
        </div>
    </div>

    <footer class="black">

        @{
            Html.RenderPartial("Footer_View");
        }
    </footer>

